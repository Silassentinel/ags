---
import Greeting from "../components/Greeting";
import BaseLayout from "../layout/BaseLayout.astro";
const pageTitle = "Home";
import BlogListWrapper from '../layout/Blogs/BlogListWrapper.astro'
---

<BaseLayout pageTitle={pageTitle}>
	<div class="highlight-in-viewport">
		<Greeting client:only="preact" messages={["Hej", "Hallo", "Hola", "Habari"]} />
	</div>
	
	<section class="brutalist-intro highlight-in-viewport">
	
	<BlogListWrapper />
</BaseLayout>

<style>
	.brutalist-intro {
		margin: 2rem 0;
		padding: 1rem;
		border: 2px solid #000;
		background-color: #f0f0f0;
	}
	
	.brutalist-intro h2 {
		font-family: monospace;
		margin-top: 0;
		border-bottom: 2px solid #000;
		padding-bottom: 0.5rem;
	}
	
	.brutalist-intro p {
		font-family: monospace;
		line-height: 1.6;
	}
	
	:global(.dark) .brutalist-intro {
		border-color: #fff;
		background-color: #222;
	}
	
	:global(.dark) .brutalist-intro h2 {
		border-color: #fff;
	}
</style>
