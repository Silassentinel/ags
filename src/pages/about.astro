---
const pageTitle = "About Me";

import { identity} from "../scripts/index.js";
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout pageTitle={pageTitle}>
    <section>
        <p>Welcome to my website</p>
    </section>

    <section>
        <h2>Whoami</h2>
        <ul>
            <li>Name: {identity.firstName}</li>
            <li>Country: {identity.country}</li>
            <li>Occupation: {identity.occupation}</li>
            {
                identity.hobbies.length > 0 && (
                    <li>Hobbies: {identity.hobbies.join(", ")}</li>
                )
            }
        </ul>
    </section>

    <section>
        <h2>Skills</h2>
        <blockquote class="skills-blockquote">
            <h3>SoftSkills</h3>
            {
                identity.softSkills.length > 0 && 
                identity.softSkills.map((skill, index) => (
                    <p>{skill.Name}</p>
                ))
            }
        </blockquote>

        <blockquote class="skills-blockquote">
            <h3>TechSkills</h3>
            {
                identity.techSkills.length > 0 && 
                identity.techSkills.map(
                    (skill, index) => (
                    <div class="tech-skill">
                        <p class="skill-name">{skill.Name}</p>
                        <p class="experience">Years of exp: {skill.experience}</p>
                        <ul class="tools-list">
                            {
                                skill.Tools.length > 0 && 
                                skill.Tools.map((tech, index) => (
                                    <li>{tech}</li>
                                ))
                            }
                        </ul>
                    </div>
                )
            )
            }
        </blockquote>
    </section>
</BaseLayout>

<style>
    .skills-blockquote h3 {
        color: inherit;
        border-bottom: 1px solid currentColor;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }

    .tech-skill {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px dashed currentColor;
    }

    .tech-skill:last-child {
        border-bottom: none;
    }

    .skill-name {
        font-weight: bold;
        text-transform: uppercase;
    }

    .experience {
        margin: 0.25rem 0;
    }

    .tools-list {
        margin-top: 0.5rem;
        list-style-type: square;
    }

    /* Ensure all content inherits colors in dark mode */
    :global(.dark) .skills-blockquote, 
    :global(.dark) .skills-blockquote h3,
    :global(.dark) .skills-blockquote p,
    :global(.dark) .skills-blockquote ul,
    :global(.dark) .skills-blockquote li {
        color: #ffffff;
    }
</style>
